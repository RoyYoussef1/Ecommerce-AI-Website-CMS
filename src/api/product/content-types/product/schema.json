{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "blocks",
      "required": true
    },
    "short_desc": {
      "type": "text",
      "maxLength": 350,
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "color": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "fashion",
        "electronics",
        "furniture",
        "beauty",
        "footwear",
        "home decor",
        "sportswear"
      ]
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files",
        "images"
      ]
    },
    "available": {
      "type": "boolean",
      "required": true
    },
    "store": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::store.store",
      "inversedBy": "products"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "products"
    },
    "variant": {
      "type": "component",
      "component": "variant.variant",
      "repeatable": true
    },
    "galleryImages": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "embedding": {
      "type": "json"
    }
  }
}
